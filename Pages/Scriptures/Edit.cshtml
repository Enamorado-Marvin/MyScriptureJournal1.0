@page "{id:int}"
@model MyScriptureJournal.Pages.Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ID" />
            <div class="form-group">
                <label asp-for="Scripture.Title" class="control-label"></label>
                <input asp-for="Scripture.Title" class="form-control" />
                <span asp-validation-for="Scripture.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.EntryDate" class="control-label"></label>
                <input asp-for="Scripture.EntryDate" class="form-control" />
                <span asp-validation-for="Scripture.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Book" class="control-label"></label>
                <select asp-for="Scripture.Book" class="form-control">
                    <option value="The Book of Mormon">The Book of Mormon</option>
                    <option value="The Old Testament">The Old Testament</option>
                    <option value="The New Testament">The New Testament</option>
                    <option value="Doctrine and Covenants">Doctrine and Covenants</option>
                    <option value="The Pearl of Great Price">The Pearl of Great Price</option>
                </select>
                <span asp-validation-for="Scripture.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.ScripturePassage" class="control-label"></label>
                <input asp-for="Scripture.ScripturePassage" class="form-control" />
                <span asp-validation-for="Scripture.ScripturePassage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Note" class="control-label"></label>
                <textarea asp-for="Scripture.Note" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Scripture.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
